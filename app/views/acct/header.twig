<div id="header" class="{{ session.acct ? 'active-session' : '' }}">
<div class="center">
		<div class="app">
	        <a href="{{ app.baseUrl }}">
	            <span class="sitelogo"><img src="{{ app.baseUrl~'/assets/img/logo.png' }}"/></span>
	            <span class="sitename">{{ app.name }}</span>
	        </a>
	    </div>
	    <a class="toggle-menu">
	    	<i class="fa fa-bars"></i>
	    </a>
	    <div class="desktop-nav">
	    	{% if session.acct %}
	    		<a href="{{ app.baseUrl~'/search' }}"><i class="fab fa-fw fa-medrt"></i> Book Appointment</a>
		    	<a href="{{ app.baseUrl~'/signout' }}" class="signout"><i class="fas fa-fw fa-sign-out-alt"></i></a>
	    	{% else %}
	    		<a href="{{ app.baseUrl }}">Home</a>
	    		<a href="{{ app.baseUrl~'/d' }}">I'm a Doctor</a>
				<a href="#">About Us</a>
				<a href="#">Contact Us</a>
				<a href="#">Guidelines</a>
	    	{% endif %}
	    </div>
	    {% if session.acct %}
    	<div class="active-acct">
    		Signed in as <a href="{{ app.baseUrl~'/myaccount' }}" class="acct-name">{{ session.acct.name }}</a>
    	</div>
	    {% endif %}
	</div>
</div>

{# mobile nav #}
<div id="mobile-nav">
	{% if session.acct %}
		<div><a href="{{ app.baseUrl~'/search' }}"><i class="fab fa-fw fa-medrt"></i> Book Appointment</a></div>
		<div><a href="{{ app.baseUrl~'/myaccount' }}"><i class="fas fa-fw fa-user-circle"></i> My Account</a></div>
		<div><a href="{{ app.baseUrl~'/myaccount/edit' }}"><i class="fas fa-fw fa-user-edit"></i> Edit Account</a></div>
		<div><a href="{{ app.baseUrl~'/signout' }}"><i class="fas fa-fw fa-sign-out-alt"></i> Sign Out</a></div>
	{% else %}
		<div><a href="#"><i class="fas fa-fw fa-home"></i> Home</a></div>
		<div><a href="#"><i class="fas fa-fw fa-user-md"></i> I'm a Doctor</a></div>
		<div><a href="#"><i class="fas fa-fw fa-info-circle"></i> About Us</a></div>
		<div><a href="#"><i class="fas fa-fw fa-mobile-alt"></i> Contact Us</a></div>
		<div><a href="#"><i class="fas fa-fw fa-question-circle"></i> Guidelines</a></div>
		<div><a href="#"><i class="fas fa-fw fa-comment"></i> Report an Issue</a></div>
	{% endif %}
</div>